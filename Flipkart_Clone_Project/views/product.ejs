  <% if(getdata.length == 0) {%>
     <h1>No data found</h1>
  <% }else{%>
    <% let i=1 %>
    <% getdata.forEach((data)=>{ %>
      <% if(i==10){ return}%>
      
      <div class="card" style="width: 18rem;">
        <div class="card-head">
          <form action="/delete/<%= data._id %>" method="post">
            <input type="hidden" name="id" value="<%= data._id%>">
            <button value="delete">delete</button>
          </form>
          <form action="/updatedata/<%= data._id %>" method="post">
            <input type="hidden" name="id" value="<% data._id%>">
            <button value="update">update</button>
          </form>
        <img src="<%= data.productimage %>" class="card-img-top" alt="...">
        <div class="card-body">
          <p class="card-text"><%= i%></p>
          <h5 class="card-title"><%=data.producttitle  %></h5>
          <p class="card-text"><%= data.productdescription%></p>
          <h5><%= data.productprice%></h5>
        </div>
      </div>
      <% i++ %>
    </div>
      <% }) %>
